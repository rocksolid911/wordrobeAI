rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isValidUser() {
      return isAuthenticated() &&
             request.resource.data.keys().hasAll(['email', 'name', 'createdAt']);
    }

    function isValidClothingItem() {
      return isAuthenticated() &&
             request.resource.data.userId == request.auth.uid &&
             request.resource.data.keys().hasAll([
               'userId', 'imageUrl', 'category', 'subcategory',
               'color', 'createdAt', 'updatedAt'
             ]);
    }

    function isValidOutfit() {
      return isAuthenticated() &&
             request.resource.data.userId == request.auth.uid &&
             request.resource.data.keys().hasAll([
               'userId', 'name', 'clothingItemIds', 'createdAt', 'updatedAt'
             ]);
    }

    // Users collection
    match /users/{userId} {
      // Allow users to read and write their own document
      allow read: if isOwner(userId);
      allow create: if isOwner(userId) && isValidUser();
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    // Clothing items collection
    match /clothing_items/{itemId} {
      // Allow users to read their own items
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;

      // Allow users to create items for themselves
      allow create: if isValidClothingItem();

      // Allow users to update their own items
      allow update: if isAuthenticated() &&
                      resource.data.userId == request.auth.uid &&
                      request.resource.data.userId == request.auth.uid;

      // Allow users to delete their own items
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Outfits collection
    match /outfits/{outfitId} {
      // Allow users to read their own outfits
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;

      // Allow users to create outfits for themselves
      allow create: if isValidOutfit();

      // Allow users to update their own outfits
      allow update: if isAuthenticated() &&
                      resource.data.userId == request.auth.uid &&
                      request.resource.data.userId == request.auth.uid;

      // Allow users to delete their own outfits
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Recommendation logs collection
    match /recommendation_logs/{logId} {
      // Allow users to read their own logs
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;

      // Allow users to create logs
      allow create: if isAuthenticated() &&
                      request.resource.data.userId == request.auth.uid &&
                      request.resource.data.keys().hasAll([
                        'userId', 'inputContext', 'createdAt'
                      ]);

      // Allow users to update their own logs (for liking)
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;

      // Allow users to delete their own logs
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
